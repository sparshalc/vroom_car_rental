<div class="container">
  <% if @payments.count > 0 %>
    <div class="row justify-content-center">
      <div class="col text-center ">
        <%= render 'partials/header', title: 'Your Payments', paragraph: "Welcome to the Manage Bookings section of Vroom. Here, as an user, you have full control over your bookings.", svg_name: 'unDraw/payment', invite_user: false, new_car: false %>
      </div>
    </div>
    <hr>
    <div class="row mt-4">
      <div class="col">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Payment Date</th>
                <th scope="col">Booking ID</th>
                <th scope="col">Payment Details</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Payment Status</th>
              </tr>
            </thead>
            <tbody id="payments">
              <% @payments.each do |payment| %>
                <%= render 'user/payments', payment:  %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="text-center mt-5">
      <p class="text-muted">You can add more data here by booking more cars ðŸ˜‰</p>
      <%= link_to 'Book Now', cars_path %>
    </div>
  <% else %>
    <div class="d-flex justify-content-center align-items-center" style="height: 70vh;">
      <div class="text-center">
        <h1 class="fw-bold main_header">No Payments's Found!</h1>
        <%= inline_svg_tag('svg/payment_not_found', width: '300', height: '300') %></br>
        <span class="text-muted text-lead">It looks like there are no payments at the moment.</span>
        <br>
        <p class="mt-3"><%= link_to 'Start Booking', cars_path %></p>
      </div>
    </div>
  <% end %>
</div>