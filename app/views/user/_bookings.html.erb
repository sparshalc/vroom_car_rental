<tr id="<%= dom_id(booking) %>">
  <th scope="row"><%= booking.id %></th>
  <td><%= booking.start_date %></td>
  <td><%= booking.end_date %></td>
  <td><%= booking.duration_in_days %></td>
  <td><%= image_tag(booking.car.image.first, width: '40px', class: 'rounded-circle') %> <%= booking.car.name %></td>
  <td><%= booking.car.user.email %></td>
  <td class="w-bold">
    <div class="<%= status_background(booking) %> mt-1 text-center rounded">
      <%= booking.status %>
    </div>
  </td>
  <td>
    <%= button_to car_booking_path(booking.car.id, booking.id), method: :delete, data: { turb_method: :delete }, class: 'btn btn-danger' do %>
      <%= inline_svg_tag('svg/trash') %>
    <% end %>
  </td>
</tr>