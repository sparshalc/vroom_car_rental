<tr id="<%= dom_id(booking) %>"  class=" <%= table_background(booking) %>">
  <th scope="row"><%= booking.id %></th>
  <td><%= booking.start_date.to_date.strftime('%Y-%m-%d') %></td>
  <td><%= booking.end_date.to_date.strftime('%Y-%m-%d') %></td>
  <td><%= booking.duration_in_days %></td>
  <td><%= image_tag(booking.car.image.first, width: '25px', height: '25px', class: 'rounded-circle') %> <%= booking.car.name %></td>
  <td><%= booking.user.email %></td>
  <td><%= booking.car.user.email %></td>
  <td>
    <%= form_with(model: booking, url: car_booking_path(booking.car.id, booking), method: :patch, remote: true) do |form| %>
      <div class="d-flex gap-1">
        <%= form.select :status, Booking.statuses.keys, {}, class: "form-select" %>
        <%= form.submit 'Update', class: 'btn btn-dark btn-sm' %>
      </div>
    <% end %>
  </td>
</tr>