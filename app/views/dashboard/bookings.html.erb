<%= render 'partials/offcanvas' %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <h1 class="text-center fw-bold mt-5">Manage Bookings</h1>
    </div>
  </div>
  <hr>
  <div class="row mt-5">
    <div class="col">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Start Date</th>
              <th scope="col">End Date</th>
              <th scope="col">Duration</th>
              <th scope="col">Car Details</th>
              <th scope="col">Requested User</th>
              <th scope="col">Requested To</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody id="bookings">
            <% @bookings.each do |booking| %>
              <%= render 'bookings_row', booking: booking %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
