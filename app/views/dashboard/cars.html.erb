<div class="wrapper" data-controller="sidebar">
  <%= render 'partials/sidebar' %>
  <div class="main">
    <%= render 'partials/dashboard_navbar' %>

    <main class="content px-3 py-2">
      <div class="container" style="margin-top: 100px;">
        <div class="d-flex justify-content-between align-items-center mt-5">
          <%= render 'partials/header', title: 'Manage Cars', paragraph: "Welcome to the Manage Cars section of Vroom. Here, as an admin or seller, you have full control over your cars.", svg_name: 'car', invite_user: false %>
        </div>
        <hr>
        <div class="table-responsive mt-5">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Rental Price</th>
                <th scope="col">Available</th>
                <th scope="col">Location</th>
                <th scope="col">Type</th>
                <th scope="col">Policies</th>
                <th scope="col">Image</th>
                <th scope="col">Actions/Policy</th>
              </tr>
            </thead>
            <tbody id="cars">
              <% @cars.each do |car| %>
                <%= render 'dashboard/car_row', car: car %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</div>
