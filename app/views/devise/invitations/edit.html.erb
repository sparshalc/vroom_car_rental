<section>
  <div class="row">
    <div class="col-lg-6 col-12 col-sm-12 col-md-6 d-flex justify-content-center align-items-center">
      <%= inline_svg_tag('complete_registrations.svg', width: '900px')%>
    </div>
    <div class="col-lg-6 col-12 col-sm-12 col-md-6">
      <div class="d-flex justify-content-center flex-column align-items-center" style="height: 100vh;">
        <div>
          <h3 class="fw-bold">Complete Registrations</h3>
          <hr>
        </div>
        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :invitation_token, readonly: true %>

          <% if f.object.class.require_password_on_accepting %>
            <div class="field">
                <%= f.label :avatar %><br />
              <%= f.file_field :avatar, autofocus: true, class: 'form-control' %>
            </div>

            <div class="field mt-2">
              <%= f.label :full_name %><br />
              <%= f.text_field :full_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group mt-2">
              <%= f.label :phone_number %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>

            <div class="field mt-2">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: 'form-control' %>
            </div>

          <% end %>

          <div class="actions">
            <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-dark w-100 mt-2' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>