<% content_for(:title, 'VROOM') %>

<section class="h-100">
  <div class="container text-center d-flex justify-content-center align-items-center flex-column mt-5">
    <div class="overflow-hidden rounded-circle" style="height: 300px; width: 300px;">
      <%= image_tag(user_avatar(current_user), class: 'object-fit-cover', style: "height: 300px; width: 300px;") %>
    </div>
    <h1 class="fw-bold mt-4"><%= current_user.email %></h1>
    <h1 class="fw-bold mt-4"><%= current_user.role %></h1>
    <p class="text-muted"><%= current_user.full_name %></p>
    <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</section>
