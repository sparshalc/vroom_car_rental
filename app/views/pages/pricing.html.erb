<div class="container" style="margin-top: 100px;">
  <div class="col-md-12">
    <div class="h-100 p-5 bg-primary border rounded-3">
      <div class="text-white d-flex gap-3 justify-content-center align-items-center fw-bold">
        <i class="bi bi-coin fs-1 fa-beat-fade"></i>
        <h1 class="display-5 fw-medium">Pricing</h1>
      </div>
    </div>
  </div>

  <div class="row text-center mt-5">
    <div class="col-lg-6">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3">
          <h4 class="my-0 fw-normal">Free</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">â‚¹ 0<small class="text-body-secondary fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>Booking</li>
            <li>Search & Sort</li>
            <li>Help & Support</li>
          </ul>
          <% if current_user %>
            <button type="button" class="w-100 btn btn-lg btn-primary"><i class="bi bi-check2-circle fa-beat-fade fs-5 mx-2"></i>Already Enrolled</button>
          <% else %>
            <%= link_to new_user_session_path, class: 'w-100 btn btn-lg btn-primary' do %>
              <i class="bi bi-box-arrow-in-right fa-beat-fade fs-5 mx-2"></i> Login to Enroll
            <% end  %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3 text-white bg-primary ">
          <h4 class="my-0 fw-bold">Deluxe</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$29<small class="text-body-secondary fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>Calendar</li>
            <li>24/7 Customer Care</li>
            <li>Smart Bookings & more..</li>
          </ul>
          <button type="button" class="w-100 btn btn-lg btn-primary"><i class="bi bi-clock-history fa-beat-fade fs-5 mx-2"></i>Enroll Now</button>
        </div>
      </div>
    </div>
  </div>

  <h1 class="main_header text-center mt-4 mb-4">Compare Pricings</h1>
  <div class="table-responsive">
    <table class="table text-center">
      <thead>
      <tr>
        <th style="width: 34%;"></th>
        <th style="width: 55%;">Free</th>
        <th style="width: 55%;">Deluxe</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row" class="text-start">Calendar</th>
          <td></td>
          <td><i class="bi bi-check2"></i></td>
        </tr>
        <tr>
          <th scope="row" class="text-start">Help & Support</th>
          <td><i class="bi bi-check2"></i></td>
          <td><i class="bi bi-check2"></i></td>
        </tr>
      </tbody>

      <tbody>
        <tr>
          <th scope="row" class="text-start">Booking</th>
          <td><i class="bi bi-check2"></i></td>
          <td><i class="bi bi-check2"></i></td>
        </tr>
        <tr>
          <th scope="row" class="text-start">Search & Sort</th>
          <td><i class="bi bi-check2"></i></td>
          <td><i class="bi bi-check2"></i></td>
        </tr>
        <tr>
          <th scope="row" class="text-start">Smart Bookings</th>
          <td></td>
          <td><i class="bi bi-check2"></i></td>
        </tr>
        <tr>
          <th scope="row" class="text-start"> 24/7 Customer Service</th>
          <td></td>
          <td><i class="bi bi-check2"></i></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class=" p-5 text-center text-muted bg-primary rounded-5 mb-5 mt-5">
    <i class="bi bi-person-arms-up display-3 text-white fa-beat-fade"></i>
    <h1 class="fw-bold mt-3 text-white">Get A Personalized Consultation</h1>
    <p class="col-lg-6 mx-auto mb-4 mt-3 text-white">
      Let's delve into your specific needs to determine which pricing plan would be the most suitable for you.
    </p>
    <%= link_to root_path, class: 'btn btn-light p-2 text-primary w-50' do %>
      <i class="bi bi-phone fa-beat-fade"></i> Schedule Demo Call
    <% end %>
  </div>
</div>
